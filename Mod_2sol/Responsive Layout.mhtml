@charset "utf-8";

* { box-sizing: border-box; }

body { margin: 0px; padding: 0px; font-family: "Comic Sans MS", cursive, sans-serif; }

.row { margin-top: 5%; margin-bottom: 5%; }

h1 { margin-bottom: 15px; text-align: center; color: rgb(255, 69, 50); font-size: 50px; }

.box { width: 100%; }

.content-name { text-align: center; border: 4px solid black; width: 100px; height: 40px; padding: 5px; float: right; margin-right: 36px; margin-top: 0px; font-weight: bold; position: relative; }

.content { border: 5px solid black; width: 90%; height: auto; margin: 2.5%; padding: 55px 2% 2%; background-color: rgba(0, 0, 0, 0.3); }

.name1 { background-color: rgb(255, 182, 193); }

.name2 { color: white; background-color: rgb(255, 0, 0); }

.name3 { background-color: rgb(255, 255, 0); }

@media (min-width: 992px) {
  .col-lg-4 { float: left; width: 33.33%; }
}

@media (max-width: 991px) and (min-width: 768px) {
  .col-md-6, .col-md-12 { float: left; }
  .col-md-6 { width: 50%; }
  .col-md-12 { margin-left: -10px; width: 100%; }
  .name3 { margin-right: 65px; width: 100px; }
}

@media (max-width: 767px) and (min-width: 0px) {
  .col-sm-12 { float: left; width: 100%; }
  .content-name { margin-right: 30px; }
}
